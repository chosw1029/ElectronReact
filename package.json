{
  "name": "react_with_electron",
  "version": "0.1.0",
  "private": true,
  "author": "ReStartAllKill",
  "description": "Building and Publishing a React Based Electron App From Scratch",
  "dependencies": {
    "electron-window-state": "^5.0.3",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.2.0"
  },
  "main": "public/electron-starter.js",
  "homepage": "./",
  "scripts": {
    "start": "BROWSER=none react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "ELECTRON_START_URL=http://localhost:3000 electron .",
    "dev": "nf start -p 3000",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "package": "electron-builder build --mac --c.extraMetadata.main=build/electron-starter.js",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.nextus.react",
    "mac": {
      "category": "com.nextus",
      "target": "dmg"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron": "^7.1.1",
    "foreman": "^3.0.1"
  }
}
